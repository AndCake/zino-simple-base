{
  "name": "zino-base-project",
  "version": "0.0.1",
  "description": "An example of how to do a server-side rendered isomorphic zino app",
  "main": "index.js",
  "author": "Robert Kunze <quixotic.worx@protonmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build:components": "rollup -c rollup-component.config.js",
    "watch:components": "chokidar 'components/**/*.(css|js)' -c 'npm run build:components'",
    "watch:server": "chokidar 'src/**/*.js' -c 'rollup -c'",
    "start:server": "node index.js",
    "livereload": "livereload",
    "start": "rollup -c && npm run build:components && npm-run-all -p watch:components watch:server start:server livereload"
  },
  "dependencies": {
    "chokidar-cli": "^1.2.0",
    "immu": "^3.0.0",
    "livereload": "^0.6.2",
    "npm-run-all": "^4.1.1",
    "rollup": "^0.49.3",
    "rollup-plugin-buble": "^0.15.0",
    "zino": "^3.3.2"
  },
  "devDependencies": {
    "cssnano": "^3.10.0",
    "postcss-cssnext": "^3.0.2",
    "postcss-nested": "^2.1.2",
    "postcss-simple-vars": "^4.1.0",
    "rollup-plugin-commonjs": "^8.2.1",
    "rollup-plugin-eslint": "^4.0.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-postcss": "^0.5.5"
  }
}
