{
  "name": "zino-base-project",
  "version": "0.0.1",
  "description": "An example of how to do a server-side rendered isomorphic zino app",
  "main": "index.js",
  "author": "Robert Kunze <quixotic.worx@protonmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build:components": "rollup -c rollup-component.config.js",
    "watch:components": "chokidar 'pages/**/*.(css|js)' -c 'npm run build:components'",
    "start:server": "node index.js",
    "livereload": "livereload 'public, node_modules/zino'",
    "start": "npm run build:components && npm-run-all -p watch:components livereload start:server",
    "build": "NODE_ENV=production npm run build:components"
  },
  "dependencies": {
    "chokidar-cli": "^1.2.0",
    "glob": "^7.1.2",
    "immu": "^3.0.0",
    "koa": "^2.4.1",
    "koa-static": "^4.0.2",
    "livereload": "^0.6.2",
    "npm-run-all": "^4.1.1",
    "rollup": "^0.49.3",
    "rollup-plugin-buble": "^0.15.0",
    "rollup-plugin-json": "^2.3.0",
    "zino": "^4.0.1"
  },
  "devDependencies": {
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "cssnano": "^3.10.0",
    "now-promise": "^0.0.3",
    "postcss-cssnext": "^3.0.2",
    "postcss-import": "^11.0.0",
    "postcss-nested": "^2.1.2",
    "postcss-simple-vars": "^4.1.0",
    "postcss-url": "^7.1.2",
    "rollup-plugin-commonjs": "^8.2.1",
    "rollup-plugin-eslint": "^4.0.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-postcss": "^0.5.5"
  }
}
